@model IEnumerable<EShop.Web.Models.Domain.Order>

@{
    ViewData["Title"] = "Your Orders";
}

<h2 class="text-center mb-4">Your Orders</h2>

<div class="container">
    <!-- Orders in Delivery -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Orders in Delivery</h3>
        </div>
        <div class="card-body">
            @if (Model.Any(order => order.Status == EShop.Web.Models.Enums.OrderStatus.InDelivery))
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Address</th>
                            <th>Contact Phone</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Where(order => order.Status == EShop.Web.Models.Enums.OrderStatus.InDelivery))
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Address</td>
                                <td>@order.ContactPhone</td>
                                <td>@order.Price.ToString("C")</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">You have no orders currently in delivery.</p>
            }
        </div>
    </div>

    <!-- Orders Sent to Supplier -->
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Orders Sent to Supplier</h3>
        </div>
        <div class="card-body">
            @if (Model.Any(order => order.Status == EShop.Web.Models.Enums.OrderStatus.SentToSupplier))
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Address</th>
                            <th>Contact Phone</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Where(order => order.Status == EShop.Web.Models.Enums.OrderStatus.SentToSupplier))
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Address</td>
                                <td>@order.ContactPhone</td>
                                <td>@order.Price.ToString("C")</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">You have no orders sent to the supplier.</p>
            }
        </div>
    </div>

    <!-- Orders Created -->
    <div class="card">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Orders Created</h3>
        </div>
        <div class="card-body">
            @if (Model.Any(order => order.Status == EShop.Web.Models.Enums.OrderStatus.Created))
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Address</th>
                            <th>Contact Phone</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Where(order => order.Status == EShop.Web.Models.Enums.OrderStatus.Created))
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Address</td>
                                <td>@order.ContactPhone</td>
                                <td>@order.Price.ToString("C")</td>
                                <td>@order.Status</td>
                                <td>
                                    <a href="@Url.Action("Payment", "Payments", new { orderId = order.Id })" class="btn btn-primary btn-sm">Proceed to Payment</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">You have no newly created orders.</p>
            }
        </div>
    </div>
</div>
